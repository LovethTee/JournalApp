<%- include('partials/header') -%>
<div class="bg-gray">
  <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
  <div class="alert alert-danger"><%= el.msg %></div>
  <% }) %> <% } %> <% if (locals.messages.info) { %> <% messages.info.forEach(
  el => { %>
  <div class="alert alert-danger"><%= el.msg %></div>
  <% }) %> <% } %>

        <section class="bg-violet-300 min-h-screen flex items-center justify-center">
          
          <!--login container-->
          <div class="bg-gray flex rounded-2xl shadow-lg max-w-5xl p-5 items-center">
            <!--login form-->
            <div class="md:w-1/2 px-8">
              <h2 class="font-bold text-5xl text-black-900 ">Welcome</h2>
                <p class="text-sm mt-8 text-fuchsia-900">Log in to your account</p>

              <form action="/login" class='flex flex-col gap-4 bg-fuschia-900' method="POST">
                <input class="p-2 mt-8 rounded-xl border" type="email" name="email" placeholder="Email" />
                <div class="relative">
                  <input class="p-2 rounded-xl border " type="password" name="password" placeholder="Password" />

                </div>
                <button class="bg-fuchsia-900 font-bold rounded-xl text-white hover:bg-purple-300 py-2">Log in</button>
              </form>
              <div class="mt-10 grid grid-cols-3 items-center text-gray-500">
                <hr class="border-gray-400">
                <p class="text-center">OR</p>
                <hr class="border-gray-400">
                
              </div>  
                <button class="bg-purple-900 text-white border font-bold py-2 px-5 w-full rounded-xl  hover:bg-red-300 mt-10">
                <a href="/signup">SignUp</a></button>
                    
            </div>
            <!--image-->
            <div class="md:block hidden w-1/2 ">
              <img class='sm:block hidden rounded-2xl' src="imgs/trip.png" alt="">
            </div>
          </div>
          
          
        </section>
</div>
 


