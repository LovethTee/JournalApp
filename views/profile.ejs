<!DOCTYPE html> 
<html> 
<head> 
    <title><%= title %></title> 
    
</head> 
<body> 
  <%- include('partials/header') -%>

    <div class="container"> 
      <h4><%= title %></h4> 
      <div class="details"> 
        <div class="card text-xs-center"> 
            <br> 
          
            <div class="md:w-1/2">
              <img src="imgs/baby2.png" alt="">
          </div>
    
            <div class="bg-gray flex rounded-2xl shadow-lg max-w-5xl p-5 items-center">
              <h4 class="card-title">Hi <strong> <%= user.userName %></strong>!</h4> 
              <h6 class="card-text"> 
                 
                  <%= user.email %> 
              </h6> 
            </div>
          
            
          <!-- <div class="flex justify-centre md:justify-start">
            <a href="/profile" class="p-3 px-6 pt-2 text-white bg-red-400 squared-full baseline hover:bg-fuchsia-900">Add a post</a>
            <a href="/feed" class="p-3 px-6 pt-2 text-white bg-orange-400 squared-full baseline hover:bg-fuchsia-900">Feed</a>
            <a href="/logout" class="p-3 px-6 pt-2 text-white bg-violet-300 squared-full baseline hover:bg-fuchsia-900">Logout</a>
  
          </div> 
          <button class="bg-white border py-2 w-full rounded-xl mt-5"> Login</button> -->
      </div>
   </div> 
   <div class="mt-5">
    <h2>Add a post</h2>
    <form action="/post/createPost" enctype="multipart/form-data" method="POST">
      <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" id="title" name="title">
      </div>
      <div class="mb-3">
        <label for="caption" class="form-label">Caption</label>
        <textarea class="form-control" id="caption" name="caption"></textarea>
      </div>
      <div class="mb-3">
        <label for="imgUpload" class="form-label">Image</label>
        <input type="file" class="form-control" id="imageUpload" name="file">
      </div>
      <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
    </form>
  </div>
</div>
<div class="col-6">
<ul class="row list-unstyled">
<% for(var i=0; i<journals.length; i++) {%>
  <li class="col-6 justify-content-between mt-5">
    <a href="/journal/<%= journals[i]._id%>">
      <img class="img-fluid" src="<%= journals[i].image%>">
    </a>
  </li>
<% } %>
</ul>
<div class="row justify-content-center mt-5">
  <a class="btn btn-primary" href="/feed">Return to Feed</a>
</div>  
</div>  
</div>
</div>
</div>
<%- include('partials/footer') -%>
</body> 
</html> 