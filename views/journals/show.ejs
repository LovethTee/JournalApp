<!--show the user's posts-->
<div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-6">
        <h2><%= journal.title %></h2>
        <img class="img-fluid" src="<%= journal.image%>" />
        <div class="row justify-content-between">
          <form
            class="col-1"
            action="/journal/likeJournal/<%= journal.id %>?_method=PUT"
            method="POST"
          >
            <button class="btn btn-primary fa fa-heart" type="submit"></button>
          </form>
          <h3 class="col-3">Likes: <%= journal.likes %></h3>
          <%if(journal.user == user.id){ %>
          <form
            action="/journal/deleteJournal/<%= journal.id %>?_method=DELETE"
            method="POST"
            class="col-3"
          >
            <button class="btn btn-primary fa fa-trash" type="submit"></button>
          </form>
          <%}%>
        </div>
      </div>
      <div class="col-3 mt-5">
        <p><%= journal.updates %></p>
      </div>
      <div class="mt-5">
      <h2>Add a Memory</h2>
      <form action="/journals/createJournal" enctype="multipart/form-data" method="POST">
          <div class="mb-3">
              <label for="thoughts" class="form-label">How are you feeling today?</label>
              <textarea class="form-control" id="thoughts" name="thoughts"></textarea>
          </div>
          <div class="mb-3">
            <label for="title" class="form-label">Updates</label>
            <input type="text" class="form-control" id="title" name="title">
        </div>
       
                
        <div class="mb-3">
          <label for="caption" class="form-label">Highlights of the Day</label>
          <textarea class="form-control" id="caption" name="caption"></textarea>
        </div>
        <div class="mb-3">
          <label for="imgUpload" class="form-label">Image</label>
          <input type="file" class="form-control" id="imageUpload" name="file">
        </div>
        <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
      </form>
    </div>
  </div>
  <div class="col-6">
  <ul class="row list-unstyled">
  <% for(var i=0; i<journals.length; i++) {%>
    <li class="col-6 justify-content-between mt-5">
      <p>Share a picture of your moments today.</p>
      <a href="/journal/<%= journals[i]._id%>">
        <img class="img-fluid" src="<%= journals[i].image%>">
      </a>
    </li>
  <% } %>
  </ul>
  <div class="row justify-content-center mt-5">
    <a class="btn btn-primary" href="/feed">Return to Feed</a>
  </div>  
  </div>  
  


